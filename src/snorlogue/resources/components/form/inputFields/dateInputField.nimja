<div class="mb-3">
  <label for="{{fieldName}}" class="form-label"> {{fieldName.capitalizeAscii()}} </label>

  <input 
  type="datetime" 
  class="form-control" 
  id="{{fieldName}}"
  form="form"
  name="{{fieldName}}"
  {% if isUpdateForm and value.isSome() %} value="{{value.get()}}" {% endif %}>

</div>
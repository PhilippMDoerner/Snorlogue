<div class="mb-3 form-check">
  <input 
  {% if isRequired %} required {% endif %}
  type="checkbox" 
  class="form-check-input" 
  id="{{fieldName}}"
  form="form"
  name="{{fieldName}}"
  {% if isUpdateForm and value.get(false) %} checked {% endif %}>
  <label for="{{fieldName}}" class="form-check-label"> {{fieldName.capitalizeAscii()}} </label>
  
</div>

